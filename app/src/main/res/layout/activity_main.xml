<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    tools:context="com.example.updateui.MainActivity">

   <Button
       android:id="@+id/butten1"
       android:text="使用Handler消息传递机制"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:id="@+id/butten2"
        android:text="使用AsyncTask异步任务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:id="@+id/butten3"
        android:text="使用runOnUiThread(action)方法"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:id="@+id/butten4"
        android:text="使用Handler的post(Runnabel r)方法"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
